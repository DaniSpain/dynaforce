		  <View class="iconWrap">
	       <ImageView class="dynaIcon"/>
	      </View>
	    
	      <Label id="headerTitle">Dynaforce</Label>
	      <!--
	      <View id="addView">
	        <ImageView id="addImage"/>
	      </View>
	      -->
	    </View>
	    
	    <View id="content">
			<!-- Define the styling properties in the TSS file -->
	        
	        
	        <View layout="vertical" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
